<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TextView
    android:id="@+id/txt_granted_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Permissions Granted:"
    android:textStyle="bold"
    android:textSize="24dp"/>
    <TextView
        android:id="@+id/txt_granted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_granted_view"
        android:text="..."
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/txt_denied_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_granted"
        android:text="Permissions Denied:"
        android:textStyle="bold"
        android:textSize="24dp"/>
    <TextView
        android:id="@+id/txt_denied"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_denied_view"
        android:text="..."
        android:textSize="16dp"/>
    <Button
        android:id="@+id/btn_multiple_permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Multiple Permissions"/>

</RelativeLayout>